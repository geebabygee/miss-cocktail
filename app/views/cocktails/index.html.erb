<div class="wrapper">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1531002423613-b7d0e005770b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80);">
    <div class="container">
      <h1>Miss Cocktail</h1>
      <p>Change your life and learn to cocktail</p>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class:"btn btn-flat" %>
    </div>
  </div>
  <div class="container margin-top">
    <div class="row">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <p><%=link_to cocktail.name, cocktail_path(cocktail) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>